<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="SongDB-PU" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        
        <class>de.htwBerlin.ai.kbe.model.Song</class>
        <class>de.htwBerlin.ai.kbe.model.User</class>
        <class>de.htwBerlin.ai.kbe.model.SongList</class>
        <exclude-unlisted-classes>true</exclude-unlisted-classes>

        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.url" 
                      value="jdbc:mysql://db.f4.htw-berlin.de:3306/_schueler__TEST_SONGDB"/>
            <property name="javax.persistence.jdbc.user" value="schueler"/>
            <property name="javax.persistence.jdbc.password" value="schueler"/>

            <!--Hibernate properties-->
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="false"/>
            <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialect"/>
        </properties>
    </persistence-unit>
</persistence>